<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;net6.0;net7.0;net8.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<LangVersion>Latest</LangVersion>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<Authors>The Tech Idea</Authors>
		<Company>The Tech Idea</Company>
		<Copyright>2022</Copyright>
		<PackageProjectUrl>https://github.com/The-Tech-Idea/</PackageProjectUrl>
		<PackageIcon>SimpleODM.png</PackageIcon>
		<RepositoryUrl>https://github.com/The-Tech-Idea/</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<Version>1.0.0.51</Version>
		<Title>$(AssemblyName)</Title>
		<Description>Provides Classes using Beep DM Engine in Core Services</Description>

	</PropertyGroup>
	<ItemGroup>
		<None Include="..\..\InstallationScripts\LogoGFx\128\SimpleODM.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Copy SourceFiles="$(TargetDir)$(PackageId).dll" DestinationFolder="$(ProjectDir)..\..\outputDLL\$(PackageId)\$(TargetFramework)" SkipUnchangedFiles="false" />
	</Target>
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="$(OutputPath)$(PackageId).$(PackageVersion).nupkg" DestinationFolder="..\..\..\LocalNugetFiles" />
	</Target>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="TheTechIdea.Beep.AssemblyLoader" Version="1.0.38" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="1.0.386" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="1.0.133" />
    <PackageReference Include="TheTechIdea.Beep.DMLogger" Version="1.0.6" />
    <PackageReference Include="TheTechIdea.Beep.JsonLoader" Version="1.0.11" />
    <PackageReference Include="TheTechIdea.Beep.Vis.Modules" Version="1.0.96" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Beep.Containers.Models\TheTechIdea.Beep.Container.Model.csproj" />
  </ItemGroup>

</Project>
